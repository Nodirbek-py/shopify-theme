@import url("https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,100;9..40,300;9..40,700&display=swap");

/* Variables */

$width: {{ settings.page_width }}px;
$break_point: 1024px;
$bgColor: {{ settings.bg_color }};
$textColor: {{ settings.text_color }};
$lightColor: {{ settings.light_bg }};
$darkColor: {{ settings.dark_bg }};

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

a, input, button, textarea {
  font-family: "DM Sans", sans-serif;
  color: $textColor;
}

body {
  font-family: "DM Sans", sans-serif;
  color: $textColor;
  background: $bgColor;
}

main {
  margin-top: 72px;
  min-height: 100vh;
  height: auto;
}

.page-width {
  max-width: $width;
  width: calc(100% - 48px);
  margin: 0 auto;

  @media screen and (max-width: $break_point) {
    width: calc(100% - 24px);
  }
}

.grid-wrapper {
  padding: 36px 0;
}

.collection-title {
  color: $textColor;
  font-size: 48px;
  font-weight: 700;
  text-align: center;
  margin-bottom: 36px;
}

.product-card {
  position: relative;
  box-shadow: #e4e4e48c 0px 8px 24px;
  border-radius: 12px;
  overflow: hidden;
  transition: 0.3s all;
}

.product-card:hover {
  box-shadow: #e4e4e4 0px 8px 24px;
  transition: 0.3s all;
  border-radius: 0px;
}

.product-card a {
  text-decoration: none;
}

.product-image {
  width: 100%;
  height: 100%;
  object-position: center;
  object-fit: cover;
}

.product-content {
  border-top: 1px solid $lightColor;
  padding: 12px;
  background: #fff;
}

.product-title {
  color: $textColor;
  font-size: 18px;
  font-weight: 300;
  margin: 8px 0;
}

.product-price {
  font-size: 14px;
  font-weight: 500;
}

.product-tags {
  position: absolute;
  top: 24px;
  right: 24px;
  display: flex;
  align-items: center;
  gap: 4px;
}

.product-tag {
  font-size: 12px;
  color: $textColor;
  font-weight: 300;
  background: #ffdede;
  border-radius: 50px;
  padding: 2px 4px;
}

.show-more {
  display: block;
  width: max-content;
  margin: 0 auto;
  margin-top: 36px;
  text-decoration: none;
  text-align: center;
  font-weight: 300;
  font-size: 18px;
  padding: 8px 24px;
  border: 1px solid #ededed;
}

.show-more:hover {
  background: #fff;
}