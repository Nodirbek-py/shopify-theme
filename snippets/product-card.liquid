{% comment %}
    Accepts:
  - product: {Object} Variant object

  Usage:
  {% render 'product-card' product: product %}
{% endcomment %}

{% comment %} Layout Start {% endcomment %}

<product-card class="product-card">
  <a href="/products/{{ product.handle }}">
    <div class="product-tags">
      {% for tag in product.tags[0] %}
        <p class="product-tag">{{ tag | strip_html }}</p>
      {% endfor %}
    </div>
    <img class="product-image" src="{{ product.featured_image |  image_url: width: 320 }}" alt="{{ product.title }}">
    <div class="product-content">
      <h2 class="product-title">{{ product.title }}</h2>
      <p class="product-price">{{ product.price | money_with_currency }}</p>
    </div>
  </a>
</product-card>

{% comment %} Layout End {% endcomment %}
